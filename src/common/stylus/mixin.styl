border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

ofh()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

$color = #37aff4
$red = #ef3a3a
$green = #4fc25e
$padding = 15px
$h40 = 40px
$h44 = 44px
$zIndex = 9
